<Window x:Class="WPFLightMotor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:LightMotorViewModel.ViewModel;assembly=LightMotor.ViewModel"
        xmlns:controls="clr-namespace:WPFLightMotor.Controls"
        mc:Ignorable="d"
        Title="LightMotor" Height="300" Width="300" Focusable="False" WindowStartupLocation="CenterScreen">
    <Grid Focusable="False">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:MenuViewModel}">
                <controls:MenuControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GameViewModel}">
                <controls:GameControl/>
            </DataTemplate>
            
        </Grid.Resources>
        <ContentControl Focusable="False" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
