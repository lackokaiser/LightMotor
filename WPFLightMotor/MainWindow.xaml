<Window x:Class="WPFLightMotor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLightMotor"
        xmlns:vms="clr-namespace:LightMotorViewModel.ViewModel;assembly=LightMotorViewModel"
        xmlns:controls="clr-namespace:WPFLightMotor.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:MenuViewModel}">
                <controls:MenuControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GameViewModel}">
                <controls:GameControl/>
            </DataTemplate>
            
        </Grid.Resources>
        
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
